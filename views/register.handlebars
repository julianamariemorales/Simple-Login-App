<h2 class="page-header">Register</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

  <!-- Top content -->
    <div class="top-content">
      <div class="container">

            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1>Login &amp; Register</h1>
                    <div class="description">
                      <p>
                        lorem ipsum
                      </p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 show-forms">
                  <span class="show-register-form active">Register</span>
                  <span class="show-forms-divider">/</span>
                  <span class="show-login-form">Login</span>
                </div>
            </div>

  <!--register-->
  <form method="post" action="/users/register">
      <div class="row register-form">
        <div class="col-sm-4 col-sm-offset-1">

            <div class="form-group">
              <label class="sr-only" for="name">Name</label>
              <input type="text" name="name" placeholder="First name..." class="form-control" id="r-form-first-name">
            </div>

            <div class="form-group">
                <label class="sr-only" for="username">Username</label>
                <input type="text" name="username" placeholder="Username..." class="form-control" id="r-form-last-name">
            </div>

            <div class="form-group">
                <label class="sr-only" for="email">Email</label>
                <input type="email" name="email" placeholder="Email..." class="form-control" id="r-form-email">
            </div>

            <div class="form-group">
                <label class="password" for="password">Password</label>
                <input type="password" name="password" placeholder="Password..." class="form-control" id="r-form-email">
            </div>

            <div class="form-group">
                <label class="password" for="password2">Confirm Password</label>
                <input type="password" name="password2" placeholder="Password..." class="form-control" id="r-form-email">
            </div>


            <div class="form-group">
                <label class="sr-only" for="r-form-about-yourself">About yourself</label>
                <textarea name="r-form-about-yourself" placeholder="About yourself..."
                class="r-form-about-yourself form-control" id="r-form-about-yourself"></textarea>
            </div>

                <button type="submit" class="btn">Sign me up!</button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
</div>
